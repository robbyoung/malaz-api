div#selection
    h3 #{title}
    each field in fields
        p
            span(class="attribute") #{field.key}:
            span #{field.value}
        button(
            type="button"
            class="button grey"
            hx-delete=`/annotations/${annotationId}`
            hx-target="#selection"
            hx-swap="outerHTML"
            hx-trigger="mouseup"
        ) Delete
