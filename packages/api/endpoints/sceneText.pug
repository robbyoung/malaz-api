extends ../page.pug
include ../components/sceneNav.pug

block content
    div#container
        div#text-container
            p(
                hx-get="/selection"
                hx-vars=`sceneId:'${sceneId}',range:window.getSelection().baseOffset + '-' + window.getSelection().extentOffset`
                hx-target="#selection"
                hx-swap="outerHTML"
                hx-trigger="mouseup"
                class="text-wrap color-highlight padding-x padding-y"
            ) #{text}
        div#selection-container
            div
                h1(class="heading") #{title}
                div(class="ochre shadowed")
                    p#selection No selection
                +sceneNav(previousSceneId, nextSceneId)
