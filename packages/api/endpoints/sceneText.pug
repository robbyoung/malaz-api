extends ../templates/page.pug

block content
    div.flex
        div.container.text
            p(
                hx-get="/selection"
                hx-vars=`sceneId:'${sceneId}',range:window.getSelection().baseOffset + '-' + window.getSelection().extentOffset`
                hx-target="#selection"
                hx-swap="outerHTML"
                hx-trigger="mouseup"
            ) #{text}
        div.container.forms
            p#selection No selection
