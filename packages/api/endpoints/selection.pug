div#selection
    if selection
        p(
            class="text-wrap"
        ) #{selection}

        div#form(class="padding-y")
            select(
                name="formId"
                hx-get="/forms"
                hx-vars=`sceneId:'${sceneId}',range:'${range}'`
                hx-target="#form"
                hx-swap="outerHTML"
                class="dropdown grey"
            )
                each form in availableForms
                    option(value=`${form.id}` class="grey") #{form.name}
    else
        p No selection