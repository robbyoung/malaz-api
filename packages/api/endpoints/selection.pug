div#selection
    if selection
        p(
            class="whitespace-pre-wrap"
        ) #{selection}

        div#form(class="flex flex-wrap gap-4 my-4")

            each form in availableForms
                button(
                    hx-get="/forms"
                    hx-vars=`formId:'${form.id}',sceneId:'${sceneId}',range:'${range}'`
                    hx-target="#form" hx-swap="outerHTML"
                    class="flex cursor-pointer appearance-none items-center rounded-md border-2 border-black bg-grey p-2 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" 
                ) #{form.name}
    else
        p No selection