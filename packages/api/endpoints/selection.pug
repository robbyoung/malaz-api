div#selection
    if selection
        p(
            class="whitespace-pre-wrap"
        ) #{selection}

        div#form-select
            select(
                name="formId"
                hx-get="/forms"
                hx-vars=`sceneId:'${sceneId}',range:'${range}'`
                hx-target="#form" hx-swap="outerHTML"
                class="flex cursor-pointer appearance-none items-center rounded-md border-2 border-black bg-grey px-10 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" 
            )
                option(disabled=true selected=true value="") Select a form
                each form in availableForms
                    option(value=form.id) #{form.name}
    else
        p No selection

    div#form