extends ../page.pug

block content
    div#contents
        h1(class="text-4xl bg-white border-b-4 border-black font-bold p-3") #{contents.title}
        div(class="[&>*:nth-child(even)]:bg-grey [&>*:nth-child(odd)]:bg-blue")
            each chapter in contents.chapters
                div(class="flex border-b-4 border-black p-3")
                    h3(class="flex font-bold items-center justify-items-right text-6xl p-5") #{chapter.name}
                    div(class="flex flex-wrap")
                        each scene in chapter.scenes
                            a(
                                href="/scene/" + scene.id
                                class="flex cursor-pointer items-center rounded-md border-2 border-black bg-red m-2 px-10 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" 
                            ) #{scene.name}