include ./icons/icon.pug

div#scene-nav
    if previousSceneId
        div
            a(
                href="/scenes/" + previousSceneId
                class="button ochre" 
            ) Previous
    else
        div

    h3(
        hx-get="/forms/scene"
        hx-vars=`sceneId:"${sceneId}"`
        hx-target="#selection"
        hx-swap="outerHTML"
        hx-trigger="mouseup"
        class="heading clickable"
    ) #{title}

    if nextSceneId
        div
            a(
                href="/scenes/" + nextSceneId
                class="button ochre" 
            ) Next
            +icon(name="arrow-right")
    else
        div