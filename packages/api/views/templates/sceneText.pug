extends ../../page.pug
include ./components/sceneNav.pug
include ./components/sceneText.pug

block content
    div#container
        +sceneText(sceneId, chunks, false)
        div#selection-container
            div
                h1(
                    hx-get="/forms"
                    hx-vars=`sceneId:"${sceneId}"`
                    hx-target="#selection"
                    hx-swap="outerHTML"
                    hx-trigger="mouseup"
                    class="heading clickable"
                ) #{title}
                div(class="ochre shadowed")
                    p#selection No selection
                +sceneNav(previousSceneId, nextSceneId)
